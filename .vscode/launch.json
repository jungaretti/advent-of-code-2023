{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Solve Day and Part",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/bin/Debug/net8.0/advent-of-code-2023.dll",
            "args": ["${input:day}", "${input:part}"],
            "cwd": "${workspaceFolder}",
            "console": "internalConsole",
            "stopAtEntry": false
        }
    ],
    "inputs": [
        {
            "id": "day",
            "type": "promptString",
            "description": "Enter the 'day' argument",
            "default": "1"
        },
        {
            "id": "part",
            "type": "promptString",
            "description": "Enter the 'part' argument",
            "default": "1"
        }
    ]
}